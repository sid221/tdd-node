{
  "name": "tdd-node",
  "version": "1.0.0",
  "description": "Test driven development for node",
  "main": "server.js",
  "scripts": {
    "test": "jest --watch",
    "start": "nodemon server.js"
  },
  "author": "Sudhanshu Chaurasia",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
